{
  "manifest_version": 3,
  "name": "Woodpecker",
  "version": "1.0.0",
  "description": "Save links and posts",
  "content_scripts": [
    {
      "css": ["assets/css/reddit.css"],
      "js": [
        "bundle.js"
      ],
      "matches": [
        "*://*.reddit.com/*"
      ],
      "resources": ["assets/images/acorn.png"],
      "run_at": "document_idle"
    }
  ]
}